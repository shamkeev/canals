<!DOCTYPE html>
<html>
  <head>
    <title>Canals</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css"
          integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
          crossorigin=""/>

    <script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js"
            integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og=="
            crossorigin="">
    </script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <div class="container-fluid">
      <%= link_to root_path, class:"navbar-brand"  do %>
        <%= image_tag "akf-logo", style:"height: 50px"%>
      <% end %>
      <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId"
              aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavId">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
          <li class="nav-item active">
            <%= link_to 'Home', root_path, class:'nav-link' %>
          </li>
        </ul>
      </div>
      <ul class="navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.email %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to 'Admin panel', admin_root_path, class:'dropdown-item' %>
              <%= link_to 'Account', edit_user_registration_path(current_user), class:'dropdown-item' %>
              <div class="dropdown-divider"></div>
              <%= link_to 'Log out', destroy_user_session_path, method: :delete , class:'dropdown-item'%>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Log in', sign_in_path, class:'nav-link' %>
          </li>
        <% end %>
      </ul>

    </div>
  </nav>

  <div class="container-fluid">
    <%= yield %>
  </div>
  </body>
</html>
