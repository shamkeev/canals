<p id="notice"><%= notice %></p>

<h1>Infra Projects</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Year</th>
      <th>Oblast</th>
      <th>District</th>
    </tr>
  </thead>

  <tbody>
  <% unless @infra_projects.count == 0 %>
    <% @infra_projects.each do |infra_project| %>
      <tr>
        <td><%= link_to infra_project.title, infra_project %></td>
        <td><%= infra_project.status %></td>
        <td><%= infra_project.start_date.year %></td>
        <td><%= link_to infra_project.oblast.name, infra_project.oblast %></td>
        <td><%= link_to infra_project.district.name, infra_project.district %></td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="5"><h3>No data entered yet</h3></td>
    </tr>

  <% end %>
  <%= paginate @infra_projects %>
  </tbody>
</table>


